{
    "manifest_version": 3,
    "name": "YouTube Quick 2x",
    "version": "0.2.0",
    "description": "Toggle YouTube 2x speed by pressing Left+Right click together (Chord). Esc to turn off.",
    "host_permissions": [
        "*://*.youtube.com/*",
        "*://youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*",
                "*://youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_title": "YouTube Quick 2x"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}