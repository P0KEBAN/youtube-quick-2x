{
    "manifest_version": 3,
    "name": "YouTube Quick 2x",
    "version": "0.2.0",
    "description": "Press left+right on the YouTube player to toggle 2x speed until pressed again.",
    "host_permissions": [
        "*://*.youtube.com/*",
        "*://youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*",
                "*://youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}